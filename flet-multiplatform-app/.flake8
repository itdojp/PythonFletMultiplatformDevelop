[flake8]
max-line-length = 88
extend-ignore = E203, W503
per-file-ignores =
    # Allow non-abstract empty methods in abstract base classes
    __init__.py: F401
    # Allow star imports in __init__ files
    __init__.py: F403
exclude =
    .git,
    .venv,
    __pycache__,
    build,
    dist,
    .mypy_cache,
    .pytest_cache,
    .tox,
    venv
max-complexity = 18
